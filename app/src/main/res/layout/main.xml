<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip"
        android:background="@drawable/fundo_degrade"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            >

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/ic_person"
                android:id="@+id/imageView"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_weight="6.69"
        android:gravity="center_vertical"
        android:padding="10dip"
        android:text="Thyago ManhÃ£es"
            android:textStyle="bold"
        android:textColor="#000" />

        <TextView
            android:id="@+id/idPacientee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data"
            android:layout_centerHorizontal="true"
            android:layout_weight="6.69"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:text="100"
            android:textColor="#000" />




    </RelativeLayout>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="30dp"
        android:text="00:00"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <view
        android:id="@+id/visualizerView2"
        class="br.com.whatsappandroid.com.cursoandroid.whatsapp.activity.activity.activity.activity.helper.VisualizerView"
        id="@+id/view"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@+id/chronometer"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/visualizerView2"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btGravar"
            android:layout_width="109dp"
            android:layout_height="96dp"
            android:background="@drawable/ic_action_playback_play" />

        <Button
            android:id="@+id/btStop"
            android:layout_width="109dp"
            android:layout_height="96dp"
            android:background="@drawable/ic_action_playback_stop" />
        <Button
            android:id="@+id/btSalvar"
            android:layout_width="109dp"
            android:layout_height="96dp"
            android:background="@drawable/ic_action_save" />

    </LinearLayout>





</RelativeLayout>