<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fundo_menus"
    tools:context="br.com.whatsappandroid.com.cursoandroid.whatsapp.activity.activity.activity.activity.CadastroPaciente">

    <ImageView
        android:id="@+id/nomeimagem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person_add"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="117dp"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/textID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="16dp"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:hint="ID"
        android:layout_below="@+id/nomeimagem"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/textNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:hint="Nome do Paciente"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/textID"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/textIdade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:hint="Idade"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/textNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_caixa_texto"
        android:padding="16dp"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:hint="E-mail"
        android:layout_below="@+id/textIdade"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:id="@+id/linearLayout4">

        <Button
            android:id="@+id/btSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.99"
            android:textSize="20dp"
            android:background="@drawable/fundo_caixa_botao"
            android:text="SALVAR" />

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_caixa_botao"
            android:textSize="20dp"
            android:text="CANCELAR" />


    </LinearLayout>




</RelativeLayout>
