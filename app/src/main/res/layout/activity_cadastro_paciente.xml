<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.whatsappandroid.com.cursoandroid.whatsapp.activity.activity.activity.activity.CadastroPaciente">

    <EditText
        android:id="@+id/textID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:background="#444"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/btCancelar" />

    <EditText
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:background="#444"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textID"
        app:layout_constraintRight_toRightOf="@+id/textID"
        app:layout_constraintTop_toBottomOf="@+id/textID"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_above="@+id/btCancelar"
        android:layout_alignStart="@+id/textID"
        android:layout_marginBottom="45dp" />

    <Button
        android:id="@+id/btSalvar"
        android:layout_width="88dp"
        android:layout_height="39dp"
        android:text="SALVAR"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textNome"
        android:layout_marginLeft="-34dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btCancelar"
        android:layout_alignTop="@+id/btCancelar"
        android:layout_toStartOf="@+id/btCancelar"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/btCancelar"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:text="CANCELAR"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/textNome"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btSalvar"
        android:layout_marginLeft="13dp"
        android:layout_below="@+id/textID"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textID"
        android:layout_below="@+id/textID"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#444"
        android:hint="E-mail" />

</RelativeLayout>
