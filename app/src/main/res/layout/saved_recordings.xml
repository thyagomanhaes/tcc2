<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FundoTelaLogin"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip"
        android:background="@drawable/fundo_degrade"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            >

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/ic_person"
                android:id="@+id/imageView"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/nomePaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_weight="6.69"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:text="Thyago Manhães"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/idPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomePaciente"
            android:layout_centerHorizontal="true"
            android:layout_weight="6.69"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:text="100"
            android:textColor="#000" />

    </RelativeLayout>


    <ListView
        android:id="@+id/lv_gravacoes"
        style="@style/Widget.AppCompat.Light.ListView.DropDown"
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_margin="2dp"
        android:layout_weight="0.51"
        android:background="@android:color/white"
        android:divider="#CCCCCC"
        android:dividerHeight="2dp" />

    <Button
        android:id="@+id/btNovaGravacao"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:text="Nova Gravação" />

</LinearLayout>